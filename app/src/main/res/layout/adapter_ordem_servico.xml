<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textNrOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Nr da OS"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--<TextView-->
            <!--android:id="@+id/textStatus"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:text="Status" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTipoServico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Tipo Serviço"/>

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status" />
    </LinearLayout>

    <TextView
        android:id="@+id/textClienteNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cliente Nome" />

    <TextView
        android:id="@+id/textDataInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Inicio" />

    <TextView
        android:id="@+id/textDescInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição Inicio" />

    <TextView
        android:id="@+id/textDataFim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Fime" />

    <TextView
        android:id="@+id/textDescFim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição Fim" />


</LinearLayout>